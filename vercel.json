{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "pages/api/**/*.js": {
      "maxDuration": 300
    }
  },
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "installCommand": "npm install --production=false",
  "buildCommand": "npm run build"
} 